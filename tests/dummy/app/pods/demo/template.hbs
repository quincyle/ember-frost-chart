<div class="demo-row">
  {{#frost-chart
    class='demo-flex'
    hook='demo-power'
    xDomain=xDomain
    yDomain=yDomain
    yScale=(d3-linear-scale)
    as |chart|
  }}
    {{#chart.x-axis label='Linear Gradient Area' as |tick|}}
      {{to-fixed tick 0}}
    {{/chart.x-axis}}

    {{#chart.y-axis as |tick|}}
      {{to-fixed tick 0}}
    {{/chart.y-axis}}

    {{#chart.svg as |plot|}}
      {{plot.x-grid}}
      {{plot.y-grid}}

      <svg>
        <defs>
          <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="0%">
            <stop class="startGradient" offset="30%"/>
            <stop class="endGradient" offset="100%"/>
          </linearGradient>
        </defs>
        {{plot.area class="gradient-chart" data=data x='x' y='y'}}
      </svg>
    {{/chart.svg}}
  {{/frost-chart}}

  {{#frost-chart
    class='demo-flex'
    hook='demo-power'
    xDomain=xDomain
    yDomain=yDomain
    yScale=(d3-linear-scale)
    as |chart|
  }}
    {{#chart.x-axis label='Gradient Area with custom path helper' as |tick|}}
      {{to-fixed tick 0}}
    {{/chart.x-axis}}

    {{#chart.y-axis as |tick|}}
      {{to-fixed tick 0}}
    {{/chart.y-axis}}

    {{#chart.svg as |plot|}}
      {{plot.x-grid}}
      {{plot.y-grid}}
      {{plot.area area=(gradient-area) class="gradient-chart" data=data x='x' y='y'}}
    {{/chart.svg}}
  {{/frost-chart}}
</div>

